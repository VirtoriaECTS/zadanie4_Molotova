<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zadanie4Molotova.Page1"
             Title="Кредитный 
             калькулятор">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="11, 5">

            <StackLayout Orientation="Horizontal">
                <Label    Text="Сумма кредита:" FontSize="23"/>
                <Entry x:Name="summa" WidthRequest="200"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label  Text="Срок (месяцев):" FontSize="23"/>
                <Entry x:Name="srok" WidthRequest="200"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Padding="5" >
                <StackLayout Orientation="Vertical">
                    <Label Text="Вид       платежа" FontSize="23"/>
                </StackLayout>
                <Picker x:Name="vid" WidthRequest="280" FontSize="25" >
                    <Picker.Items>
                        <x:String>Аннуитетный</x:String>
                        <x:String>Дифференцированный</x:String>
                        <x:String>Однократный</x:String>
                    </Picker.Items>
                </Picker>


            </StackLayout>

            <StackLayout Orientation="Vertical" Margin="0, 20">
                <StackLayout Orientation="Vertical">
                    <Label Text="Процентная" FontSize="23"/>
                    <Label Text="ставка:" FontSize="23"/>
                </StackLayout>
                <Slider  x:Name="slider" ThumbColor="Blue" MaximumTrackColor="Blue" MinimumTrackColor="Blue" Minimum="0" Maximum="100" ValueChanged ="Slider_BindingContextChanged" ></Slider>
                <Label x:Name="procent" Text="%" FontSize="23" VerticalOptions="Center" HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Orientation="Vertical">
                <Label Text="Ежемесячный платеж:" FontSize="23"/>
                <Label x:Name="monthplat" Text="..." FontSize="23"/>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Общая сумма:" FontSize="23"/>
                    <Label x:Name="allsum" Text="..." FontSize="23"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Переплата:" FontSize="23"/>
                    <Label x:Name="pereplata" Text="..." FontSize="23"/>
                </StackLayout>

            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>